{
  "comments": {
    "lineComment": "::"
  },
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "«", "close": "»" },
    { "open": "“", "close": "”" },
    { "open": "`", "close": "`" }
  ],
  "surroundingPairs": [
    { "open": "\\", "close": "\\" },
    { "open": "\"", "close": "\"" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "*", "close": "*" },
    { "open": "_", "close": "_" },
    { "open": "-", "close": "-" },
    { "open": "'", "close": "'" },
    { "open": "=", "close": "=" },
    { "open": "|", "close": "|" },
    { "open": "/", "close": "/" },
    { "open": "^", "close": "^" },
    { "open": "~", "close": "~" },
    { "open": "<", "close": ">" },
    { "open": "«", "close": "»" },
    { "open": "“", "close": "”" },
    { "open": "`", "close": "`" }
  ],
  "folding": {
    "offSide": true,
    "markers": {
      "start": "^\\s*::\\s*[#*]",
      "end": "^\\s*::\\s*[.]"
    }
  },
  "onEnterRules": [
    {
      "beforeText": ":{2,3}\\s*$",
      "action": { "indent": "indent" }
    }
  ]
}
